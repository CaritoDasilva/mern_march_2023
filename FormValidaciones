import React, { Component } from "react";

class Form extends Component {
    const {register, formState: {errors} = useForm ({})
    

    render() {
        const { userName, email, address, handleChange } = this.props;

        return (
            <form action="">
                <label htmlFor="userName">Usuario</label>
                <input type="text" placeholder="Ej. Carolina Da Silva..." name="userName" value={userName} onChange={handleChange}{...register('userName', {
                required: true,
                minLength: 2 }/>
                 {errors.nombre?.type === 'required' && <p> El campo nombre es requerido</p>}
                 {errors.nombre?.type === 'minLength' && <p>El campo nombre debe tener menos de 2 caracteres</p>}
                <label htmlFor="email">Email</label>
                <input type="email" placeholder="Ej. caro@gmail.com..." name="email" value={email} onChange={handleChange}{...register('email', {
                required: true,
                pattern: /^[^\s@]+@[^\s@]+\.[^\s@]+$/i/> )} />
                 {errors.email?.type === 'pattern' && <p>El formato del email es incorrecto</p>}
                <label htmlFor="address">Dirección</label>
                <textarea id="" cols="30" rows="10" name="address" value={address} onChange={handleChange} placeholder="Calle 1, comuna Mariquina, región de Los Ríos"{...register('address', {
                required: true,
                maxLength: 100 )} />
                 {errors.address?.type === 'address' && <p>El formato de address es incorrecto</p>}
                ></textarea>
                <button type="submit">Enviar</button>
            </form>
        )
    }
}

export default Form;
